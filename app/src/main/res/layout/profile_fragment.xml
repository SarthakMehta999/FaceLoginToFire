<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgroundgradient"
            tools:context="fiture.quiamco.com.homefiture.Activities.MainActivity">


            <!--<ImageView-->
                <!--android:id="@+id/imageView"-->
                <!--android:layout_width="378dp"-->
                <!--android:layout_height="171dp"-->
                <!--android:layout_alignParentStart="true"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:layout_marginTop="54dp"-->
                <!--android:scaleType="centerCrop"-->
                <!--app:layout_constraintLeft_toLeftOf="parent"-->
                <!--app:layout_constraintRight_toRightOf="parent"-->
                <!--app:layout_constraintTop_toTopOf="parent"-->
                <!--app:srcCompat="@drawable/gympicheader" />-->

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="378dp"
                android:layout_height="599dp"
                android:layout_marginTop="65dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                tools:layout_editor_absoluteX="3dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_width="138dp"
                    android:layout_height="135dp"
                    android:layout_gravity="center"
                    app:civ_border_color="@color/bg_main"
                    app:civ_border_width="3dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />


                <TextView
                    android:id="@+id/nameAndSurname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5sp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Deceree Clyde Quiamco"
                    android:textAlignment="center"
                    android:textColor="#F5F5F5"
                    android:textSize="25sp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />
                <!--<TextView-->
                    <!--android:id="@+id/tvBirthday"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_marginTop="6sp"-->
                    <!--android:text="Birthday:12/20/1997"-->
                    <!--android:textColor="@color/textColor"-->
                    <!--android:textSize="15sp"-->
                   <!--/>-->


                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Female"
                    android:textAllCaps="true"
                    android:textColor="#F5F5F5"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-55dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Weight:"
                    android:textAllCaps="true"
                    android:textColor="#F5F5F5"
                    android:textSize="15sp" />
                <TextView
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="-20dp"
                android:layout_marginLeft="55dp"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-condensed"
                android:text="Height:"
                android:textColor="#F5F5F5"
                android:textSize="16sp" />
                <TextView
                    android:id="@+id/tvWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-55dp"
                    android:layout_marginTop="-10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Weight:"
                    android:textColor="#F5F5F5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="-20dp"
                    android:layout_marginLeft="55dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Height:"
                    android:textColor="#F5F5F5"
                    android:textSize="14sp" />


                <com.rilixtech.materialfancybutton.MaterialFancyButton
                    android:id="@+id/challenge"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:layout_marginBottom="20dp"
                    fancy:mfb_defaultColor="@color/colorPrimary"
                    fancy:mfb_focusColor="@color/textColor"
                    fancy:mfb_iconFont="fontawesome.ttf"
                    fancy:mfb_iconPosition="left"
                    fancy:mfb_radius="30dp"
                    fancy:mfb_text="Daily Challenges"
                    fancy:mfb_textColor="@color/textColor"
                    android:onClick="calculateBMI"/>
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="DAILY CHALLENGE"-->
                    <!--android:textColor="@color/colorAccent"-->
                    <!--android:layout_gravity="center"/>-->

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/dailyChallenge"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp"></android.support.v7.widget.RecyclerView>

                <Button
                    android:id="@+id/startActivity"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="15dp"
                    android:text="Start"
                    android:textSize="15sp"
                    android:textColor="@color/colorAccent"
                    style="?android:attr/borderlessButtonStyle"
                   />


                <Button
                    android:id="@+id/share"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="-46dp"
                    android:layout_marginLeft="200dp"
                    android:text="share"
                    android:textColor="@color/colorAccent"
                    style="?android:attr/borderlessButtonStyle"
                     />


            </LinearLayout>

        </RelativeLayout>


</FrameLayout>