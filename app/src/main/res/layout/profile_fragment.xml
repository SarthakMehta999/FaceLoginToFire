<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#212121"
            tools:context="fiture.quiamco.com.homefiture.MainActivity">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="378dp"
                android:layout_height="171dp"
                android:layout_alignParentStart="true"

                android:layout_alignParentTop="true"
                android:layout_marginTop="54dp"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/gympicheader" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="378dp"
                android:layout_height="599dp"
                android:layout_marginTop="107dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                tools:layout_editor_absoluteX="3dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="20sp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />


                <TextView
                    android:id="@+id/nameAndSurname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginTop="15sp"
                    android:textColor="#F5F5F5"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />


                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginTop="6sp"
                    android:textColor="#F5F5F5"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />

                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginTop="6dp"
                    android:textColor="#F5F5F5"
                    android:textSize="16dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvBirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginTop="6sp"
                    android:textColor="#F5F5F5"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvBMI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="200sp"
                    android:layout_marginTop="1sp"
                    android:textColor="#F5F5F5"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DAILY CHALLENGE"
                    android:textColor="#FFFF"
                    android:layout_gravity="center"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/dailyChallenge"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="3dp"></android.support.v7.widget.RecyclerView>

                <com.rilixtech.materialfancybutton.MaterialFancyButton
                    android:id="@+id/startActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    fancy:mfb_borderColor="#FFFFFF"
                    fancy:mfb_borderWidth="1dp"
                    fancy:mfb_defaultColor="#212121"
                    fancy:mfb_focusColor="#9bd823"
                    fancy:mfb_iconFont="fontawesome.ttf"
                    fancy:mfb_iconPosition="left"
                    fancy:mfb_radius="30dp"
                    fancy:mfb_text="Start Activity"
                    fancy:mfb_textColor="#FFFFFF" />


                <com.rilixtech.materialfancybutton.MaterialFancyButton
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    fancy:mfb_borderColor="#FFFFFF"
                    fancy:mfb_borderWidth="1dp"
                    fancy:mfb_defaultColor="#212121"
                    fancy:mfb_focusColor="#9bd823"
                    fancy:mfb_iconFont="fontawesome.ttf"
                    fancy:mfb_iconPosition="left"
                    fancy:mfb_radius="30dp"
                    fancy:mfb_text="Share Content"
                    fancy:mfb_textColor="#FFFFFF" />


            </LinearLayout>

        </RelativeLayout>


</FrameLayout>