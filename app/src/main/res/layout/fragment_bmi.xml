<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundgradient"
    tools:context="fiture.quiamco.com.homefiture.Activities.BMI">

    <RelativeLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:elevation="1dp"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="Edit BMI"
            android:textColor="#cffebf"
            android:textSize="32sp" />
    </RelativeLayout>


    <TextView
        android:text="Age"
        android:textColor="#F5F5F5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>

    <android.support.design.widget.TextInputEditText
        android:textColor="#F5F5F5"
        android:id="@+id/age"
        android:textColorHint="#9E9E9E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:hint="years old"
        android:ems="6"
        android:inputType="number|numberDecimal"
        android:textSize="20sp"/>
    <TextView
        android:text="Weight"
        android:textColor="#F5F5F5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>

    <android.support.design.widget.TextInputEditText
        android:textColor="#F5F5F5"
        android:id="@+id/weight"
        android:textColorHint="#9E9E9E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:hint="kilograms"
        android:ems="6"
        android:inputType="number|numberDecimal"
        android:textSize="20sp"/>

    <TextView
        android:text="Height"
        android:textColor="#F5F5F5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:ems="6"
        android:hint="centimeters"
        android:inputType="number|numberDecimal"
        android:textColor="#F5F5F5"
        android:textColorHint="#9E9E9E"
        android:textSize="20sp" />


    <com.rilixtech.materialfancybutton.MaterialFancyButton
        android:id="@+id/edit"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:mfb_borderWidth="2dp"
        fancy:mfb_defaultColor="@color/colorPrimary"
        fancy:mfb_focusColor="@color/backgroundforallscreen"
        fancy:mfb_iconFont="fontawesome.ttf"
        fancy:mfb_iconPosition="left"
        fancy:mfb_radius="30dp"
        fancy:mfb_text="Edit"
        fancy:mfb_textColor="@color/textColor" />


    <com.rilixtech.materialfancybutton.MaterialFancyButton
        android:id="@+id/btnProc"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        fancy:mfb_text="Proceed"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:mfb_borderColor="@color/colorPrimary"
        fancy:mfb_borderWidth="2dp"
        fancy:mfb_defaultColor="@color/colorPrimary"
        fancy:mfb_focusColor="@color/backgroundforallscreen"
        fancy:mfb_iconFont="fontawesome.ttf"
        fancy:mfb_iconPosition="left"
        fancy:mfb_radius="30dp"
        fancy:mfb_textColor="@color/textColor" />
</LinearLayout>
</FrameLayout>